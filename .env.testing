# Testing Environment Configuration
APP_NAME=CosmicHub
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration (In-memory SQLite for testing)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Session Configuration
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Mail Configuration (Use log driver for testing)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=test@example.com
MAIL_PASSWORD=password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=test@cosmichub.local
MAIL_FROM_NAME=CosmicHub

# API Keys (Use test/mock values)
GEMINI_API_KEY=test_gemini_key
STRIPE_PUBLIC_KEY=pk_test_example
STRIPE_SECRET_KEY=sk_test_example
STRIPE_WEBHOOK_SECRET=whsec_test_example

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Cache (Use array driver for testing)
CACHE_DRIVER=array

# Queue (Use sync driver for testing)
QUEUE_CONNECTION=sync