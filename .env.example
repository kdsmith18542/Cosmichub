# CosmicHub Environment Configuration
# Copy this file to .env and configure your environment-specific settings

# Application Environment
APP_NAME="CosmicHub"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

# Database Configuration (SQLite for current setup)
DB_CONNECTION=sqlite
DB_DATABASE=storage/database/cosmichub.db

# Legacy MySQL Configuration (if needed)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=cosmichub
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_FILES=storage/sessions
SESSION_COOKIE=cosmichub_session
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Logging Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug
LOG_PATH=storage/logs

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@cosmichub.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security
APP_KEY=base64:your_app_key_here
JWT_SECRET=your_jwt_secret_here

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Required API Keys (Configure these for full functionality)
GEMINI_API_KEY=your_gemini_api_key_here
STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
EMAIL_API_KEY=your_email_api_key_here

# Optional API Keys
HISTORY_API_KEY=your_history_api_key_here
MUSIC_CHARTS_API_KEY=your_music_charts_api_key_here

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=cosmichub
CACHE_PATH=storage/cache

# Queue Configuration
QUEUE_CONNECTION=sync

# Third-party Services
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
